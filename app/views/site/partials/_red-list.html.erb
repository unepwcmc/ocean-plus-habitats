<section id="<%= id %>" class="bg--grey-xlight section-padding">
  <div class="container--small">
    <div class="flex">
      <h2><%= t('home.red_list.title') %></h2>
      <modal-trigger id="citation" modal-content="<%= modal_content %>" class="icon--citation margin-space-left"></modal-trigger>
    </div>

    <% t('home.red_list.intro_text').each do |p| %>
      <p>
      <%= p.html_safe %>
      </p>
    <% end %>
  </div>

  <div class="container">
    <%= render 'shared/red-list-table' %>

    <p class="text--smallprint max-width-container-small">
      <%= t('home.red_list.smallprint_1').html_safe %>
    </p>

    <p class="text--smallprint max-width-container-small">
      <%= t('home.red_list.smallprint_2').html_safe %>
    </p>

    <p class="text--smallprint max-width-container-small">
      <%= t('home.red_list.smallprint_3').html_safe %>
    </p>

  </div>
</section>
