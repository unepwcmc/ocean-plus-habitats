<section id="<%= id %>" class="section-padding">
  <div class="container">
    <div class="flex">
      <h2><%= t('shared.proportion_protected.title_html') %></h2>
      <modal-trigger id="citation" modal-content="<%= modal_content %>" class="icon--citation margin-space-left"></modal-trigger>
    </div>

    <p class="max-width-container-small">
      <%= t('shared.proportion_protected.intro_text', country_name: @name) %>
    </p>

    <%= render partial: '/shared/proportion-protected-chart',
      locals: {
        id: 'habitats_present_map',
        map_datasets: map_datasets,
      }
    %>
    
    <p class="text--smallprint max-width-container-small">
      <%= t('shared.proportion_protected.note').html_safe %>
    </p>

    <p class="text--smallprint max-width-container-small">
      <%= t('shared.proportion_protected.last_updated').html_safe %>
    </p>
  </div>
</section>
