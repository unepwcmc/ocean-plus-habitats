<section id="<%= id %>" class="section-padding bg--grey-xlight">
  <div class="container">
    <div class="flex">
      <h2><%= t('countries.shared.red_list.title'); %></h2>

      <modal-trigger id="citation" modal-content="<%= modal_content %>" tooltip-text="<%= t('global.sources_modal.tooltip').html_safe %>" class="icon--citation margin-space-left"></modal-trigger>
    </div>

    <% if !@red_list_data.all? { |habitat| habitat['data'].nil? } %>
      <p class="max-width-container-small">
        <%= t('countries.shared.red_list.intro_text', country_name: @name) %>
      </p>
      <%= render 'shared/red-list-table' %>

      <p class="text--smallprint max-width-container-small">
        <%= t('countries.shared.red_list.smalltext_1').html_safe %>
      </p>

      <p class="text--smallprint max-width-container-small">
        <%= t('countries.shared.red_list.smalltext_2').html_safe %>
      </p>
    <% else %>
      <p class="max-width-container-small">
        <%= t('countries.shared.red_list.no_data', country_name: @name) %>
      </p>
    <% end %>

    <p class="text--smallprint max-width-container-small">
      <%= t('countries.shared.red_list.smalltext_3', { last_updated: last_updated }).html_safe %>
    </p>
  </div>
</section>
